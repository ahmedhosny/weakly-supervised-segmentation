{
    "name": "KIDNEY_BC",
    "n_gpu": 1,

    "arch": {
        "type": "ResNetBC",
        "args": {"n_class": 2}
    },
    "weights": "data/pretrained_models/ilsvrc-cls_rna-a1_cls1000_ep-0001.params",
    "data_loader": {
        "type": "KidneyBCDataLoader",
        "args":{
            "data_dir": "data/kidney_original",
            "batch_size": 12,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "BCEWithLogitsLoss",
    "metrics": [
        "f1_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/kidney_bc",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
